class Book:
    title = "sus"
    autor = "szwed"
    year = 1999
    is_available = True

class Library:
    def __init__(self):
        self.books = []
    def add_book(self, book):
        self.books.append(book.title)
    def display_books(self):
        print(self.books)
    def borrow_book(self, title):

ksiazka = Book()
lib = Library()
lib.add_book(ksiazka)
lib.display_books()
